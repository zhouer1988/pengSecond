<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAbstractActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/container_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_button_navigation_ll">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/bottom_button_navigation_ll"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/left_arrow_fl"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/left_arrow_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/arrow_left" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_arrow_fl"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/right_arrow_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/arrow_right" />

    </FrameLayout>

</RelativeLayout>